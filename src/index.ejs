    }

    div[id*='zuri'] {
      width: 100%;
    }

    div[id*='zuri/topbar'] {
      z-index: 5;
      width: 100%;
      height: 8vh;
      position: fixed;
      top: 0;
      left: 0;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #fff;
    }

    div[id*='zuri/sidebar']::-webkit-scrollbar {
      display: none;
    }

    div[id*='zuri/sidebar'] {
      width: 20%;
      height: 92vh;
      overflow-y: scroll;
      /* Hide scrollbar for IE and Edge */
      -ms-overflow-style: none;
      /* Hide scrollbar for Firefox */
      scrollbar-width: none;
      position: fixed;
      top: 8vh;
      left: 0;
      background-color: #fff;
      z-index: 99999;
    }

    div[id*='zuri-plugin'] {
      width: 80%;
      position: absolute;
      top: 8vh;
      right: 0;
    }

    @media (max-width: 768px) {
      div[id*='zuri/sidebar'] {
        display: none;
        width: 100%;
      }
      div[id*='zuri-plugin'] {
      width: 100%;
    }
    }

    /* CHESS STYLE */
    .app__container {
      padding: 0 !important;
      padding-block: 5rem;
